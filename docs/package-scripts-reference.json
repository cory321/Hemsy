{
  "scripts": {
    "// Development": "",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",

    "// Testing Scripts": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",

    "// E2E Testing": "",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",

    "// Accessibility Testing": "",
    "test:a11y": "playwright test --grep=\"accessibility|a11y\"",

    "// Performance Testing": "",
    "test:perf": "playwright test --grep=\"performance\"",

    "// Mobile Testing": "",
    "test:mobile": "playwright test --project=\"Mobile Chrome\"",

    "// Test Utilities": "",
    "test:unit": "jest --testPathPattern=\"\\.test\\.(js|jsx|ts|tsx)$\"",
    "test:integration": "jest --testPathPattern=\"integration\"",
    "test:update-snapshots": "jest --updateSnapshot",

    "// Pre-commit Testing": "",
    "test:pre-commit": "npm run test:ci && npm run test:e2e && npm run test:a11y",

    "// Clean up": "",
    "test:clean": "jest --clearCache && rm -rf .next coverage playwright-report test-results",

    "// Database Testing (if needed)": "",
    "test:db:setup": "supabase db reset --local",
    "test:db:seed": "npm run test:db:setup && supabase db seed --local",

    "// Type Checking": "",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },

  "// Test Dependencies": "Add these to your package.json devDependencies",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@types/jest": "^29.5.0"
  }
}
