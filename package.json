{
  "name": "threadfolio-v2",
  "version": "0.1.0",
  "private": true,
  "description": "Mobile-first PWA for seamstresses and tailoring businesses",
  "engines": {
    "node": "22.17.1"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "test:e2e:ui": "playwright test --config config/playwright.config.ts --ui",
    "test:a11y": "playwright test --config config/playwright.config.ts --grep=\"@accessibility\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^15.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^6.1.6",
    "@mui/icons-material": "^6.1.6",
    "@mui/x-date-pickers": "^7.22.2",
    "@clerk/nextjs": "^6.3.1",
    "@supabase/supabase-js": "^2.46.1",
    "stripe": "^17.3.1",
    "resend": "^4.0.1",
    "twilio": "^5.3.5",
    "cloudinary": "^2.5.1",
    "@vercel/analytics": "^1.3.1",
    "@sentry/nextjs": "^8.42.0",
    "dayjs": "^1.11.13",
    "react-hook-form": "^7.53.2",
    "@hookform/resolvers": "^3.9.1",
    "zod": "^3.23.8",
    "sharp": "^0.33.5",
    "lucide-react": "^0.460.0",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.9.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/jest": "^29.5.14",
    "eslint": "^9.15.0",
    "@eslint/eslintrc": "^3.2.0",
    "eslint-config-next": "^15.1.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.48.2",
    "axe-core": "^4.10.2",
    "@axe-core/playwright": "^4.10.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config config/.prettierrc --write"
    ],
    "*.{json,md,css}": [
      "prettier --config config/.prettierrc --write"
    ]
  }
}
